---
import Menu from "../components/MenuLG.astro";
import Footer from "../components/Footer.astro";
---

<section>
  <div class="h-10"></div>
  <Menu />
  <div class="bg-slate-200">
    <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
      <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        <div class="px-4 py-5 sm:px-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">
            Contact Information
          </h3>
          <p class="mt-1 max-w-2xl text-sm text-gray-500">
            Get in touch with me via email or LinkedIn.
          </p>
        </div>
        <div class="border-t border-gray-200 px-4 py-5 sm:p-0">
          <dl class="sm:divide-y sm:divide-gray-200">
            <div class="sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6 sm:py-5">
              <dt class="text-sm font-medium text-gray-500">Email</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <a href="mailto:hello@nealle.page">hello@nealle.page</a>
              </dd>
            </div>
            <div class="sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6 sm:py-5">
              <dt class="text-sm font-medium text-gray-500">LinkedIn</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <a href="https://www.linkedin.com/in/neallepage/"
                  >https://www.linkedin.com/in/neallepage/</a
                >
              </dd>
            </div>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <Footer />
</section>
