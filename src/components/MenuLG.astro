---
import { menuItems } from "../consts";
---

<section
  id="FullScreenMenu"
  class="container absolute z-50 hidden text-white -translate-y-24 issolate md:flex md:justify-center md:items-center"
>
  <div class="px-6 mx-auto max-w-7xl lg:px-8">
    <div class="max-w-2xl mx-auto lg:max-w-none">
      <div
        class="bg-slate-800 mt-2 grid grid-cols-1 gap-0.5 overflow-hidden rounded-2xl lg:rounded-full text-center sm:grid-cols-2 lg:grid-cols-4"
      >
        {
          menuItems.items.map((data) => (
            <div class="flex flex-col p-6 bg-white/5 hover:bg-white/10">
              <a href={data.url} class="hover:font-bold">
                {data.name}
              </a>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
