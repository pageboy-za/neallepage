---
const heroImage = "/NeallePageHS.webp";
const heroImageAlt = "Nealle Page";
const heroText = "With Fintech, eCommerce,and SaaS experience";
const tagline =
  "An experienced Product Manager that thrives solving complex problems and building products that people love to use.";
---

<article class="text-slate-100">
  <div
    class="min-h-[50vh] bg-slate-950 p-1 border-8 rounded-lg border-slate-600 shadow-2xl"
  >
    <div class="flex flex-col p-2 rounded-lg md:flex-row">
      <div
        id="left"
        class="justify-between w-full rounded-lg md:w-2/3 text-baby_powder"
      >
        <h1 class="text-2xl tracking-tight leading-1 md:text-4xl">
          🧑‍🚀 Hello, I'm Nealle 🚀
        </h1>
        <h2 class="text-2xl font-bold md:text-4xl">
          {tagline}
        </h2>
        <p class="text-2xl">{heroText}</p>
      </div>
      <div id="right" class="w-full h-auto md:w-1/3">
        <img
          src={heroImage}
          alt={heroImageAlt}
          width={1024}
          height={1024}
          class="rounded-XL"
        />
      </div>
    </div>
  </div>
</article>
